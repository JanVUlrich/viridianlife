---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout bodyclass={"layout-home"}>
  <Header title={SITE_TITLE} />
  <main class="page-index-content" aria-label="Content">
    <div class="container">

      <div class="site-hero-start">

          <div class="site-logo-start">
            <img src="/public/bitmap/logo_small.png" class="" />
          </div>

          <h1 class="site-title">
			This Viridian Life
          </h1>
		  <div>
			Civilization probably was a bad idea. How do we make the best of it?
		  </div>

      </div>

      <div class="home-wrap">
        <div class="section-divider">
          <span>Latest</span>
        </div>

        <article class="featured-preview cf">
          <div
            class="featured-preview__img"
            style="background-image: url('{{ featured_post.image }}')"
          >
          </div>

          <div class="featured-preview__text">
            <div class="featured-textcontent">
              <div class="post-date">
                <!-- {{ featured_post.date | date: "%b %-d, %Y" }} -->
              </div>
              <h2 class="post-preview-headline">
                <!-- <a href="{{ featured_post.url | relative_url }}">{{ featured_post.title | escape }}</a> -->
              </h2>
              <div class="featured-textcontent__excerpt">
                <!-- {{ featured_post.intro }} -->
              </div>
              <a
                class="post-continue-link"
                href="{{ featured_post.url | relative_url }}"
                >Continue reading</a
              >
            </div>
          </div>
        </article>

        <div class="section-divider">
          <span>Further reading</span>
        </div>

        <section class="post-previews-list">
          <!--   
		  {% comment %} Note: change limit to 5 as soon as 8 posts are available {% endcomment %}
		  {% for post in site.posts offset:1 limit:7 %} -->

          <article class="post-preview">
            <div class="post-date">
              <!-- {{ post.date | date: "%b %-d, %Y" }} -->
            </div>
            <div class="post-preview__text">
              <header class="post-preview__header">
                <h2 class="post-preview-headline">
                  <!-- <a href="{{ post.url | relative_url }}">{{ post.title | escape }}</a> -->
                </h2>
              </header>

              <div class="post-preview__excerpt">
                <!-- {{ post.intro }} -->
              </div>

              <footer>
                <a
                  class="post-continue-link"
                  href="{{ post.url | relative_url }}">Continue reading</a
                >
              </footer>
            </div>
          </article>

          <!-- {% endfor %} -->
        </section>

        <!-- {% if site.posts.size > 6 %}
  
		{{ site.posts.size }} -->

        <div class="section-divider">
          <span>From the archives</span>
        </div>

        <section class="archive-previews">
          <ul class="list-unstyled archive-previews-list">
            <!-- {% for post in site.posts offset:6 %} -->
            <li class="archive-preview">
              <div class="post-date">
                <!-- {{ post.date | date: "%b %-d, %Y" }} -->
              </div>
              <h3 class="archive-preview__headline">
                <!-- <a class="" href="{{ post.url }}">{{ post.title }}</a> -->
              </h3>
            </li>
            <!-- {% endfor %} -->
          </ul>
        </section>

        <!-- {% endif %}
  
  {% endcomment %} -->
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
<style lang="scss">
  @use "../styles/config/variables" as v;

  .page-index-content {
    margin-bottom: v.$spacing-unit * 4;
  }

  .index-main-title {
    @media (min-width: 360px) {
      text-align: center;
    }
  }

  .site-title {
    display: block;
    font-family: v.$base-font-family;
    color: v.$color-brand;
    text-decoration: none;
    text-transform: capitalize;
    font-size: 4rem;
    font-weight: bold;
    margin-bottom: 0;
    line-height: 1.1;
  }

  .site-subtitle {
    text-align: center;
    color: v.$color-brand;
    font-family: v.$heading-font-family;
    font-size: 16px;
    font-weight: bold;

    @media (min-width: 360px) {
      font-size: 20px;
      text-align: center;
    }
  }


  .site-hero-start {
    margin-bottom: v.$spacing-unit * 3;
	text-align: center;

    @media (min-width: 360px) {
      margin-top: v.$spacing-unit * 4;
      margin-bottom: v.$spacing-unit * 10;
    }
  }

  .site-logo-start {
    width: 40px;
    height: 40px;
    margin-bottom: v.$spacing-unit * 2;

    @media (min-width: 360px) {
      width: 56px;
      height: 56px;
      margin: 0 auto v.$spacing-unit * 2 auto;
    }

    > img {
      max-width: 100%;
    }
  }
  
</style>
